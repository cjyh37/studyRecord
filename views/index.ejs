<div class="bg-white shadow rounded-lg p-6">
    <h1 class="text-2xl font-bold mb-4">Welcome to LMS</h1>
    <p class="text-gray-600">Select a lecture to start learning:</p>
    <ul class="mt-4 space-y-2">
        <% lectures.forEach((lecture) => { %>
          <li>
            <a href="/lecture/<%= lecture._id %>" class="text-blue-500 hover:underline">
              <%= lecture.title %>
            </a>
          </li>
        <% }); %>
      </ul>
  </div>